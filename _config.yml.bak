# Site Configuration
title: "Department of Immunology - Harvard Medical School"
description: "Advancing immunological research through computational tools, educational resources, and collaborative science."
url: "https://hms-immunology.github.io"
baseurl: ""

# Author Information
author:
  name: "Eren Ada, PhD"
  email: "eren_ada@hms.harvard.edu"
  github: "hms-immunology"

# Build Settings
markdown: kramdown
highlighter: rouge
theme: minima
plugins:
  - jekyll-feed
  - jekyll-sitemap
  - jekyll-seo-tag

# Site Navigation
header_pages:
  - index.html

# Collections
collections:
  workshops:
    output: true
    permalink: /:collection/:name/
  pipelines:
    output: true
    permalink: /:collection/:name/
  protocols:
    output: true
    permalink: /:collection/:name/

# Defaults
defaults:
  - scope:
      path: ""
      type: "posts"
    values:
      layout: "post"
      author: "Eren Ada, PhD"
  - scope:
      path: ""
      type: "workshops"
    values:
      layout: "workshop"
  - scope:
      path: ""
      type: "pipelines"
    values:
      layout: "pipeline"

# Exclude from Processing
exclude:
  - Gemfile
  - Gemfile.lock
  - node_modules
  - vendor/bundle/
  - vendor/cache/
  - vendor/gems/
  - vendor/ruby/
  - templates/
  - README.md

# SEO Settings
google_analytics: "G-XXXXXXXXXX" # Replace with your GA4 tracking ID
twitter:
  username: # Add Twitter handle if applicable

# Social Links
github_username: hms-immunology
linkedin_username: # Add if applicable

# Site Settings
show_excerpts: true
paginate: 5 